{% extends 'front/front_layout.html.twig' %}

{% block title %}{{ parent() }}-Modification du mot de passe de {{ app.user.pseudo }}{% endblock %}

{% block body %}

{% if background_pictures == false %}
    <section>
        <h1 class="collection-title"><span>Modification de votre mot de passe</span></h1>
        <form class="login-form" method="post">
            <div class="form-group">
                <label for="pass">Mot de passe</label>
                <input type="password" id="pass" name="pass" required pattern=".[a-zA-Z0-9]{6,}" placeholder="Mot de passe" title="6 caractères non spéciaux minimum" class="form-control">
            </div>
            <div class="form-group">
                <label for="pass2">Confirmer le mot de passe</label>
                <input type="password" id="pass2" name="pass2" required pattern=".[a-zA-Z0-9]{6,}" placeholder="Répétez le mot de passe" title="Les mots de passe doivent être identiques" class="form-control">
            </div>
            <button class="btn registrer-btn">Valider</button>
        </form>
    </section>
{% else %}

    {% for background_picture in background_pictures %}
        <section class="background" style="background-image:url( /assets/images/uploads/{{ background_picture.picture }}">
            <h1 class="collection-title"><span>Modification de votre mot de passe</span></h1>
            <form class="login-form" method="post">
                <div class="form-group">
                    <label for="pass">Mot de passe</label>
                    <input type="password" id="pass" name="pass" required pattern=".[a-zA-Z0-9]{6,}" placeholder="Mot de passe" title="6 caractères non spéciaux minimum" class="form-control">
                </div>
                <div class="form-group">
                    <label for="pass2">Confirmer le mot de passe</label>
                    <input type="password" id="pass2" name="pass2" required pattern=".[a-zA-Z0-9]{6,}" placeholder="Répétez le mot de passe" title="Les mots de passe doivent être identiques" class="form-control">
                </div>
                <button class="btn registrer-btn">Valider</button>
            </form>
        </section>
    {% endfor %}
{% endif %}

{% endblock %}
